    <packaging>pom</packaging>

    <name>fiul</name>
    <description>Financial Information User Lens/Layer(FIUL)</description>

    <properties>
        <java.version>11</java.version>
        <version.spring-boot>2.5.2</version.spring-boot>
        <!--mockito version according to spring-boot-test.mockito -->
        <version.mockito>3.9.0</version.mockito>
        <version.reactor-core>3.4.0</version.reactor-core>
        <version.reactor-netty>1.0.8</version.reactor-netty>
        <version.spring-webflux>5.3.8</version.spring-webflux>
        <version.maven-dependency-plugin>3.1.1</version.maven-dependency-plugin>
        <version.logger>2.14.0</version.logger>
