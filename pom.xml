        <license.dir>license</license.dir>
        <project.inceptionYear>2019</project.inceptionYear>
        <project.organization.name>Finarkein Analytics Pvt. Ltd.</project.organization.name>
        <founder-website>https://finarkein.com/</founder-website>
        <!-- Project Specific Configuration -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <version.junit-jupiter>5.3.1</version.junit-jupiter>
        <version.mockito>3.2.0</version.mockito>
    </properties>

    <modules>
        <module>fiul-core</module>
        <module>fiul-rest</module>
        <module>fiul-aa-webclient</module>
        <module>fiul-service-consent</module>
        <module>fiul-service-dataflow</module>
        <module>fiul-service-notification</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-parent</artifactId>
                <version>${version.spring-boot}</version>
                <type>pom</type>
                <scope>import</scope>
